<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Week9PrismExampleApp.Views.Page1"
    Title="Maximum Temperature"
    BackgroundColor="{StaticResource PageBgColor}"
    >
    <ContentPage.Resources>
        <ResourceDictionary>
             <Color x:Key="PageBgColor">#1350b2</Color>
            <Color x:Key="NormalTextColor">#dae0ea</Color>
            <Color x:Key="EntryColor">#33373d</Color>
          <Style x:Key="NewText" TargetType="Button">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
      </Style>
        </ResourceDictionary>
        </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
           <Button
            Text="Go Back!"
            Command="{Binding GoBackCommand}" />
            <Label Text="Page 1" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

         
            <Label
                Text="{Binding List.Wind.Speed, StringFormat='Wind Speed: {0}'}" 
                TextColor="{StaticResource NormalTextColor}"/>
            <Label
                Text="{Binding WeatherItem.Main.TempMax, StringFormat='Max Temp: {0}'}" 
                TextColor="{StaticResource NormalTextColor}"/>
           
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

